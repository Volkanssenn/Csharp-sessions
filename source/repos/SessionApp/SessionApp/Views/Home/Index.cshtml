@inject IHttpContextAccessor contxt;
@model LoginModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form asp-action="Index" asp-controller="Home" method="post">
        <input type="email" class="form-control" placeholder="email" asp-for="Email" />
        <input type="password" class="form-control" placeholder="pass" asp-for="Password">
        <button type="submit" class="btn btn-primary" value="Login">Giriş</button>
    </form>
    <ul>
        <li>Student Id: @contxt.HttpContext.Session.GetInt32("StudentId")</li>
        <li>Student Name: @contxt.HttpContext.Session.GetString("StudentName")</li>
    </ul>
</div>
